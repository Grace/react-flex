@import '~css-utils/styles/css-utils.styl'

borderColor=magenta

.rf-layout
    position relative
    size 100%
    .rf-layout-item
        position relative

    &.rf-row
        @extend .u-flex-row

    &.rf-column
        @extend .u-flex-column

    &.rf-composite
        > .rf-layout-item
            flex 1

    &.rf-row-1-column-n
    &.rf-column-n-row-1
        & > .rf-layout-item
            position relative
            & > .rf-layout
                position absolute
                size 100%
                top 0px
                left 0px

    &.rf-row-1-column-n.rf-vertical
    &.rf-column-n-row-1.rf-vertical
        @extend .u-flex-row

    &.rf-row-1-column-n.rf-horizontal
    &.rf-column-n-row-1.rf-horizontal
        @extend .u-flex-column